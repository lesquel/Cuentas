---
interface Props {
    name : string
    num : string
    img : string
}
const {name, num, img} = Astro.props;
---

<section class=" 
relative backdrop-blur-2xl
max-w-[400px] w-full 
py-6 px-4
border border-blue-600 rounded-md
bg-white bg-opacity-10
text-white
z-10

before:content-[''] before:absolute before:w-1/3 before:h-1/3
before:bg-blue-600 before:z-[-1] 
before:top-1/2 before:left-1/2 before:-translate-x-1/2 before:-translate-y-1/2
before:blur-3xl

hover:scale-105 transition-transform
">
<!--  -->
<!--  -->
    <b class="block text-center text-lg font-['Cousine']">{name}</b>

    <p class="text-center text-2xl font-['Creepster'] [letter-spacing:5px] my-5"># {num}</p>
    <div class="flex w-full justify-between items-center">
        <img class="w-[50px] rounded-md" src={img} alt="">
        

        <button type="button" class="font-['Creepster'] text-lg text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 
        hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300  
        shadow-lg shadow-cyan-500/50 
        font-medium rounded-lg  px-5 py-2.5
         text-center mr-2 mb-2"
         data-copiar={num}>Copiar</button>
    </div>
</section>